{% extends 'base.html.twig' %}

{% block title %}Produits - commerce{% endblock %}

{% block body %}

    <div class="row">
    
        <div class="col-md-3">
            {% include "product/_filter.html.twig" %}

        </div>

        <div class="col-md-9">
        
            <div class="row">
            
                <ul>
    
                    {% for product in products %}
                        <li>
                            <a href="{{ path('product', {'slug': product.slug}) }}">
                                <img src="{{ product.image }}" alt="{{ product.name }}" style="height:100px;">
                            </a>
                        </li>
                        <li><a href="{{ path('product', {'slug': product.slug}) }}">{{ product.name }}</a></li>
                        <li>{{ product.brand }}</li>
                        <li>{{ product.price|number_format(2, ',', ' ') }}â‚¬</li>
                    {% endfor %}

                </ul>
            </div>
        </div>
    
    </div>

{% endblock %}
