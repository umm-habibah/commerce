{% extends 'base.html.twig' %}

{% block title %}Mon compte | Mes adresses - commerce{% endblock %}

{% block body %}

    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">Mon compte</h1>
            <p class="col-md-8 fs-4">{{ app.user.lastname }} {{ app.user.firstname }}</p>
        </div>

        <div class="nav-bread">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('profile') }}">Mon compte</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('profile') }}">Mes adresses</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mon adresse</li>
                </ol>
            </nav>
        </div>
    </div>
    

    
    {{ form_start(form) }}
        <div class="row g-3">
            <div class="col-md-4">
                {{ form_row(form.lastname) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.firstname) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.name) }}
            </div>
            <div class="col-12">
                {{ form_row(form.address) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.city) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.country) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.zipcode) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.phone) }}
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Valider</button>
            </div>
        </div>
    {{ form_end(form) }}
    
    <hr class="featurette-divider">

{% endblock %}