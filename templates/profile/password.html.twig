{% extends 'base.html.twig' %}

{% block title %}Mon compte | Mot de passe - commerce{% endblock %}

{% block body %}

    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">Mon compte</h1>
            <p class="col-md-8 fs-4">{{ app.user.lastname }} {{ app.user.firstname }}</p>
        </div>

        <div class="nav-bread">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('profile') }}">Mon compte</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mot de passe</li>
                </ol>
            </nav>
        </div>
    </div>


    <div class="row g-3">
    
        <div class="col-md-6">
        
            {{ form_start(form) }}
                {{ form_row(form.old_password) }}
                {{ form_row(form.new_password.first) }}
                {{ form_row(form.new_password.second) }}

                <input type="submit" value="Valider" class="btn btn-primary">
            {{ form_end(form) }}
        </div>
    </div>

    <hr class="featurette-divider">

{% endblock %}
